<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Clinic App</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Optional: Custom font if Inter is not available by default */
        body {
            font-family: "Inter", sans-serif;
        }

        .collapsible-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }

        .collapsible-content.open {
            max-height: 500px; /* Adjust based on expected content height */
            transition: max-height 0.5s ease-in;
        }
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DentalApplication.styles.css" asp-append-version="true" />
</head>
<body class="font-inter">
    <div class="flex min-h-screen bg-gray-100">
        <!-- Sidebar - Made fixed -->
        <aside class="w-64 bg-gray-800 text-white p-6 flex flex-col fixed h-full top-0 left-0 shadow-lg">
            <div class="flex items-center mb-10">
                <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center mr-2">
                    <i class="fas fa-tooth text-xl text-gray-800"></i>
                </div>
                <h1 class="text-xl font-bold">ClinicApp</h1>
            </div>
            <nav class="flex-grow">
                <ul>
                    <li class="mb-4">
                        <a class="flex items-center p-3 rounded-xl bg-purple-600 text-white font-semibold" asp-area="" asp-controller="PatietRecordView" asp-action="HomePatientRecord">
                            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                            </svg>
                            Patient Records
                        </a>
                    </li>
                    <li class="mb-4">
                        <a class="flex items-center p-3 rounded-xl text-white hover:bg-gray-700" asp-area="" asp-controller="PatietRecordView" asp-action="ViewPatientRecord">
                            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zm-6 8a5 5 0 015-5h1a5 5 0 015 5v2a1 1 0 01-1 1H7a1 1 0 01-1-1v-2zm-2.454-3.454A6.002 6.002 0 001 13v2a1 1 0 001 1h16a1 1 0 001-1v-2a6.002 6.002 0 00-4.546-5.454L13 9a3 3 0 00-2.454-3.454z" />
                            </svg>
                            Appointments
                        </a>
                    </li>
                    <li class="mb-4">
                        <a class="flex items-center p-3 rounded-xl text-white hover:bg-gray-700" asp-area="" asp-controller="Home" asp-action="Index">
                            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M15 8a3 3 0 10-2.977-2.977l-1.938 1.938A5.002 5.002 0 0112 15H8a5.002 5.002 0 01-2.062-4.939l-1.938-1.938A3 3 0 103 8v2.025A5.002 5.002 0 017.975 15H12.025a5.002 5.002 0 014.939-4.062V8zM5 9a1 1 0 100-2 1 1 0 000 2zm.025 8a1 1 0 100-2 1 1 0 000 2zM15 9a1 1 0 100-2 1 1 0 000 2zm-.025 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                            Prescriptions
                        </a>
                    </li>
                    <li class="mb-4">
                        <a class="flex items-center p-3 rounded-xl text-white hover:bg-gray-700" asp-area="" asp-controller="Home" asp-action="Index">
                            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                                <path fill-rule="evenodd" d="M4 5a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.121-1.121A2 2 0 0011.172 3H8.828a2 2 0 00-1.414.586L6.293 4.707A1 1 0 015.586 5H4zm6 9a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                            </svg>
                            Billing
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="mt-auto">
                <ul>
                    <li class="mb-4 hidden">
                        <a href="#" class="flex items-center p-3 rounded-xl hover:bg-gray-700">
                            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M11.49 3.17c-.38-.15-1.04-.31-2.17-.31V2a1 1 0 00-1-1H6a1 1 0 00-1 1v.793c-1.13.16-1.79.32-2.17.47a1 1 0 00-1.04.09 1 1 0 00-.51.93V15a1 1 0 001 1h12a1 1 0 001-1V4a1 1 0 00-.51-.93 1 1 0 00-1.04-.09zM11 11a1 1 0 10-2 0v2a1 1 0 102 0v-2z" clip-rule="evenodd" />
                            </svg>
                            Settings
                        </a>
                    </li>
                    <li class="mb-4 hidden">
                        <a href="#" class="flex items-center p-3 rounded-xl hover:bg-gray-700">
                            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd" />
                            </svg>
                            Log out
                        </a>
                    </li>
                </ul>
            </div>
        </aside>


        <div class="flex-grow p-8 ml-64 overflow-auto">
            <main role="main" class="pb-3 h-full">
                @RenderBody()
            </main>
        </div>

        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>